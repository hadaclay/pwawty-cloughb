include _search

doctype html
html
  head
    title= h.siteName
    link(rel="stylesheet" href="/dist/style.css")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    //pre= h.dump(user)
    section.hero.is-fullheight.is-dark
      .hero-head
        .container
          nav.nav
            .container
              .nav-left
                .nav-item
                  h3= h.siteName
              .nav-right
                span.nav-item
                  if user
                    a.button.is-medium.is-primary.is-inverted.is-outlined(href="/logout") Logout
                  else
                    a.button.is-medium.is-primary.is-inverted.is-outlined(href="/login") Login
      .hero-body
        .container.has-text-centered
          h1.title.is-1= h.siteName
          +search()
    .wrapper
      .container.section
        .results
    footer.footer
      .container
        .content.has-text-centered
          p= h.siteName
